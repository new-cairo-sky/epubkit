{
  "name": "epubkit.js",
  "version": "1.0.0",
  "description": "A universal js library for parsing and editing epubs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/main.client.js",
  "homepage": "https://github.com/new-cairo-sky/epubkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/new-cairo-sky/epubkit"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest",
    "build": "npm run clean-dist && npm run build:node && npm run build:client",
    "build:node": "babel ./src --out-dir ./dist --extensions '.ts,.tsx,.js,.jsx' && npm run build:typedefs",
    "build:client": "webpack --progress --mode=production --config webpack.config.cjs",
    "build:typedefs": "./node_modules/typescript/bin/tsc --emitDeclarationOnly",
    "clean-dist": "rm -r ./dist/*",
    "start": "babel-node ./test/dev-server.js",
    "check-types": "tsc"
  },
  "author": "New Cairo Sky",
  "license": "Hippocratic-2.1",
  "dependencies": {
    "@peculiar/webcrypto": "^1.1.1",
    "adm-zip": "^0.4.16",
    "browserfs": "git+https://github.com/jvilk/BrowserFS.git",
    "css": "^2.2.4",
    "es6-promisify": "^6.1.1",
    "file-saver": "^2.0.2",
    "helmet": "^3.23.3",
    "jssha": "^3.2.0",
    "jszip": "^3.5.0",
    "lodash.isequal": "^4.5.0",
    "utf8": "^3.0.0",
    "uuid": "^8.2.0",
    "xml2js": "^0.4.23",
    "xmldsigjs": "^2.0.30"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-async-to-generator": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "assets-webpack-plugin": "^3.9.12",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-polyfill": "^6.26.0",
    "epubkit-check": "git+https://github.com/new-cairo-sky/epubkit-check.git",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.21.2",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "jest-environment-puppeteer-jsdom": "^6.0.0",
    "jest-puppeteer": "^4.4.0",
    "jest-xml-matcher": "^1.2.0",
    "puppeteer": "^2.1.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  }
}
